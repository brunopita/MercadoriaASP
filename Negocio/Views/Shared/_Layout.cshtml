<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="nav navbar-default navbar-fixed-top" style="font-size:large">
        <div class="container col-md-10 col-md-offset-1">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                     <li>@Html.ActionLink("Home", "Index", "Home")</li>
                     <li>
                         <a href="#Mercadoria" class="dropdown-toggle" data-toggle="dropdown">Mercadoria<b class="caret"></b></a>
                         <ul class="dropdown-menu">
                             <li>@Html.ActionLink("Mercadorias", "Index","Mercadoria")</li>
                             <li>@Html.ActionLink("Cadastrar","Create","Mercadoria")</li>
                         </ul>
                     </li>
                    <li>
                        <a href="#Negociacao" class="dropdown-toggle" data-toggle="dropdown">Negociação<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Negociações", "Index", "Home")</li>
                            <li>@Html.ActionLink("Cadastrar", "Create", "Negociacao")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
   

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
