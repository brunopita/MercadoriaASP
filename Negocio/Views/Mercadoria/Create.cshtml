@model Negocio.Models.Banco.mercadoria

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>mercadoria</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Preco)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Preco)
            @Html.ValidationMessageFor(model => model.Preco)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Quantidade)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Quantidade)
            @Html.ValidationMessageFor(model => model.Quantidade)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TipoMercadoriaId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.TipoMercadoriaId, (SelectList)ViewData["TipoMercadoria"], "Tipo Mercadoria")
            @Html.ValidationMessageFor(model => model.TipoMercadoriaId)
        </div>

        <p>
            <input type="submit" value="Cadastrar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
