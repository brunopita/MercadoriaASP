@model IEnumerable<Negocio.Models.Banco.negocio>
@{
    ViewBag.Title = "Index";
}

<h2>Transações anteriores</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(model => model.Id) </td>
            <td>@Html.DisplayNameFor(model => model.MercadoriaId)</td>
            <td>@Html.DisplayNameFor(model => model.CreateAt)</td>
            <td>@Html.DisplayNameFor(model => model.TipoNegocioId)</td>
        </tr>
    </thead>
    <tbody>
        @if(Model != null){
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td> 
                    <td>@Html.DisplayFor(modelItem => item.Mercadoria.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreateAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.TipoNegocio.Nome)</td>
                </tr>
                
            }
        }
      
    </tbody>
</table>